{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "lib": ["ES6", "DOM"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
